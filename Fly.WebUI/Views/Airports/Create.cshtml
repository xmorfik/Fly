@using Microsoft.AspNetCore.Mvc.Localization;

@using Fly.Core.Entities;
@model Fly.Core.Entities.Airport
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

<div class="card  mx-auto" style="width:1000px">
    <img class="card-img-top" src="~/airport.jpg">
    <div class="card-body">
        <form asp-action="Create">
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label">@SharedLocalizer["City"]</label>
                <input asp-for="CityId" value="@ViewData["SelectedCityId"]" readonly class="form-control" />
                <span asp-validation-for="CityId" class="text-danger"></span>
                @Html.ActionLink(SharedLocalizer["Select"].Value,"Index","Cities", new { isSelect = true, redirectUri = "/airports/create" })
            </div>
            @if (ViewData["SelectedCity"] != null)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@(((City)ViewData["SelectedCity"]).Name)</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@(((City)ViewData["SelectedCity"]).IsoCountry)</h6>
                        <a href="/cities/details/@(((City)ViewData["SelectedCity"]).Id)" class="card-link">Details</a>
                    </div>
                </div>
            }
            <br />
            <div class="form-group">
                <label asp-for="Name" class="control-label">@SharedLocalizer["City"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="AirportId" class="control-label">@SharedLocalizer["Airport"]</label>
                <input asp-for="AirportId" class="form-control" />
                <span asp-validation-for="AirportId" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Longitude" class="control-label">@SharedLocalizer["Longitude"]</label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Latitude" class="control-label">@SharedLocalizer["Latitude"]</label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Altitude" class="control-label">@SharedLocalizer["Altitude"]</label>
                <input asp-for="Altitude" class="form-control" />
                <span asp-validation-for="Altitude" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Create"]" class="btn btn-primary" />
            </div>
        </form>
        <br />
        <div>
            <a asp-action="Index">@SharedLocalizer["Back"]</a>
        </div>
    </div>
</div>

@Html.AntiForgeryToken();

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
