@using Microsoft.AspNetCore.Mvc.Localization;

@inject IHtmlLocalizer<SharedResource> SharedLocalizer

<div class="card bg-dark text-white text-center mx-auto" style="width:1000px">
    <img class="card-img" src="~/aircraft.jpg" alt="Card image">
    <div class="card-img-overlay">
        <p class="display-1 card-title text-uppercase text-dark ">@SharedLocalizer["Aircrafts"]</p>
        <a href="/aircrafts" class="stretched-link"></a>
    </div>
</div>
<br />
