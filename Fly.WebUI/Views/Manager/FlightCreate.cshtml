@model Fly.WebUI.Models.FlightCreateViewModel

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FlightCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-group">
                <label asp-for="DepartureAirportId" class="control-label"></label>
                <input asp-for="DepartureAirportId" class="form-control" />
                <span asp-validation-for="DepartureAirportId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ArrivalAirportId" class="control-label"></label>
                <input asp-for="ArrivalAirportId" class="form-control" />
                <span asp-validation-for="ArrivalAirportId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AircraftId" class="control-label"></label>
                <input asp-for="AircraftId" class="form-control" />
                <span asp-validation-for="AircraftId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DepartureDateTime" class="control-label"></label>
                <input asp-for="DepartureDateTime" class="form-control" />
                <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ArrivalDateTime" class="control-label"></label>
                <input asp-for="ArrivalDateTime" class="form-control" />
                <span asp-validation-for="ArrivalDateTime" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
