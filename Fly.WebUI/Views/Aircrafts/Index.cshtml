@using Fly.Core.Entities;
@using Microsoft.AspNetCore.Mvc.Localization;
@model AircraftsViewModel;
@inject IViewLocalizer Localizer

<div class="card text-center mx-auto" style="width:1200px">
    <img class="card-img-top" src="~/aircraft.jpg">
    <div class="card-body">
        <form asp-action="Index">
            <div class="row">
                <div class="col">
                    <label class="control-label">@Localizer["ModelType"]</label>
                    <input asp-for="AircraftParameter.ModelType" class="form-control" />
                </div>
                @if(!Model.IsSelect)
                {
                    <div class="col">
                        <label class="control-label">@Localizer["Aircraft State"]</label>
                        <input asp-for="AircraftParameter.AircraftState" class="form-control" />
                    </div>
                }
                <div class="col">
                    <label class="control-label">@Localizer["Airline"]</label>
                    <input asp-for="AircraftParameter.Airline" class="form-control" />
                </div>
                @Html.HiddenFor(x=>x.RedirectUri)
                @Html.HiddenFor(x=>x.IsSelect)
                <div class=" row">
                    <div class="col">
                        <label> OrderBy </label>
                        @Html.DropDownListFor(x => x.AircraftParameter.OrderBy,
                        new List<SelectListItem>
                        {
                            new SelectListItem{ Value = "Id", Text= "Id"},
                            new SelectListItem{ Value = "ModelType", Text= "ModelType"},
                            new SelectListItem{ Value = "SerialNumber", Text= "SerialNumber"},
                            new SelectListItem{ Value = "FlightHours", Text= "FlightHours"},
                            new SelectListItem{ Value = "AircraftState", Text= "AircraftState"},
                        }, new { @class = "form-select"} )
                    </div>
                    <div class="col">
                        <br />
                        <label> Descresing </label>
                        @Html.CheckBoxFor(x=>x.AircraftParameter.Descresing)
                    </div>
                </div>
                <div class="col">
                    <br />
                    <input type="submit" onclick="setStartPage()" value=@Localizer["Search"] class="btn btn-primary" />
                </div>
                <br />
                <div class="card-body">
                    @if (User.IsInRole("Administrator") || User.IsInRole("Manager"))
                    {
                        @Html.ActionLink("Create", "Create")
                    }
                    <table class="table rounded rounded-6 overflow-hidden table-sm table-dark table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Localizer["ModelType"]
                                </th>
                                <th>
                                    @Localizer["SerialNumber"]
                                </th>
                                <th>
                                    @Localizer["ManufactureDate"]
                                </th>
                                <th>
                                    @Localizer["FlightHours"]
                                </th>
                                <th>
                                    @Localizer["AircraftState"]
                                </th>
                                <th>
                                    @Localizer["AirlineName"]
                                </th>
                                <th>
                                    @Localizer["AirportName"]
                                </th>
                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PagedResponse)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModelType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SerialNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ManufactureDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FlightHours)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AircraftState)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Airline.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Airport.Name)
                                        @Html.DisplayFor(modelItem => item.Airport.City.IsoCountry)
                                    </td>
                                   
                                    <td>
                                        @if(Model.IsSelect)
                                        {
                                            @Html.ActionLink("Select","Select", new { id = item.Id, redirectUri = Model.RedirectUri})
                                        }
                                        else
                                        {
                                            @if (User.IsInRole("Administrator"))
                                            {
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                                <br />
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            }
                                            @if(User.IsInRole("Manager"))
                                            {
                                                @Html.ActionLink("Create seats", "Create", "Seats", new{ id = item.Id })
                                            }
                                        }
                                        @Html.ActionLink("Details", "Details", new { id=item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col">
                    <input asp-for="MetaData.PageSize" min="1" value="@Model.MetaData.PageSize" class="form-control" />
                </div>
                <div class="col">
                    <input hidden="true" asp-for="MetaData.CurrentPage" value="@Model.MetaData.CurrentPage" id="pageNumber" class="form-control" />
                </div>
                @if (Model.MetaData.HasPrevious)
                {
                    <div class="col">
                         <input type="submit" value="Prev" onclick="decrementValue()" class="btn btn-outline-primary" />
                    </div>
                }
                @if (Model.MetaData.HasNext)
                {
                    <div class="col">
                        <input type="submit" value="Next" onclick="incrementValue()" class="btn btn-outline-primary" />
                    </div>
                }
            </div>
        </form>
    </div>
</div>

<script>
    function incrementValue() {
        var value = parseInt(document.getElementById('pageNumber').value, 10);
        value++;
        document.getElementById('pageNumber').value = value;
    }

    function decrementValue() {
        var value = parseInt(document.getElementById('pageNumber').value, 10);
        value--;
        document.getElementById('pageNumber').value = value;
    }

    function setStartPage() {
        document.getElementById('pageNumber').value = 1;
    }
</script>
